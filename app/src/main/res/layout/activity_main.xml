<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/ic_bluetooth_off" />

    <TextView
        android:id="@+id/chanceWind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click en mi para probar el NFC"
        android:textColor="#000"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btnBlueOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activar"
            android:minWidth="250dp"/>

        <Button
            android:id="@+id/btnBlueOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desactivar"
            android:minWidth="250dp"/>

        <Button
            android:id="@+id/btnBlueVisibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activar visibilidad"
            android:minWidth="250dp"/>

        <Button
            android:id="@+id/btnBlueGetDevices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dispositivos Emparejados"
            android:minWidth="250dp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/list_Devices"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>